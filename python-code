import qrcode

# Get user input for the QR code
data = input("ENTER ")

# Create a QR code
qr = qrcode.QRCode(
    version=1,  # Size of the QR code (1-40)
    error_correction=qrcode.constants.ERROR_CORRECT_L,  # Error correction level
    box_size=10,  # Size of each box in the QR grid
    border=4,  # Border thickness
)

qr.add_data(data)
qr.make(fit=True)

# Create and save the QR code image
qr_img = qr.make_image(fill="black", back_color="white")
qr_img.show()  # Open the QR code image
qr_img.save("qrcode.png")  # Save the QR code as an image

print("QR Code generated and saved as 'qrcode.png'! ðŸŽ‰")
